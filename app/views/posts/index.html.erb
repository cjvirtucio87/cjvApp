<p id="notice"><%= notice %></p>


<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Listing Posts</h1>
      <div class="row">
        <% @posts.each do |post| %>
          <div class="col-xs-6 col-xs-offset-3 tile">
            <h3><%= post.title %></h3>
            <p><%= post.body %></p>
            <ul class="nav nav-pills">
              <li><%= link_to 'Show', post %></li>
              <li><%= link_to 'Edit', edit_post_path(post) %></li>
              <li><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></li>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

  </tbody>
</table>

<br>

